<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- First Template: CE Material Certificate Document -->
        <template id="report_sale_ce_document" name="CE Material Certificate Document">
            <t t-name="reports_print.report_sale_ce_document">
                <t t-call="reports_print.external_layout_yena">
                    <style>
                        * {
                        font-family: "DejaVu Sans", Arial, sans-serif !important;
                        }
                    </style>
                    <!-- Loop over each order line -->
                    <t t-foreach="doc.order_line" t-as="line" t-foreach-index="line_index">

                        <div class="page"
                            style="background-color: transparent; page-break-after: always;">
                            <table
                                style="width: 100%; border-collapse: collapse; background-color: transparent;">
                                <tr>
                                    <td
                                        style="text-align: center; font-size: 18px; border: 1px solid black;">
                                        <br />
                                        <img
                                            src="https://upload.wikimedia.org/wikipedia/commons/6/66/Conformité_Européenne_%28logo%29.svg"
                                            style="width: 120px;" />
                                        <br /><br />2354 </td>
                                </tr>
                                <tr>
                                    <td
                                        style="text-align: center; border-left: 1px solid black; border-right: 1px solid black;">
                                        <br /><br /> YENA DEMİR ÇELİK SAN. VE TİC. LTD. ŞTİ.<br />
                                        Factory: İTOSB Recep Bilal Hancı Caddesi No:9<br /> Tuzla /
                                        İSTANBUL<br /> 2023<br /><br />
                                        2354-CPR-1090-1-TUVNORD-2242634585.23.0033.R00<br /> PERFORM
                                        NO: YENA-<t t-esc="'{:02d}'.format(line_index + 1)" />-H1<br />
                                        Client Reference No: <t t-esc="doc.customer_reference" />
                                        (YENA - <t t-esc="doc.project_sales.name" />)<br /> Product: <t
                                            t-esc="line.product_id.name" />
                                        <br /><br />
                                    </td>
                                </tr>
                                <tr>
                                    <td
                                        style="text-align: center; border-left: 1px solid black; border-right: 1px solid black;">
                                        <br /><br /> EN1090-1<br /> Intended use:<br /> All Types of
                                        Load Bearing Structures (Steel Anchor Plates)<br /><br />
                                    </td>
                                </tr>
                                <tr>
                                    <td style="border: 1px solid black; border-top: none;">
                                        <table style="width: 100%; border-collapse: collapse;">
                                            <!-- Complete Table Content -->
                                            <tr>
                                                <td
                                                    style="width: 50%; border-right: 1px solid black; border-bottom: none;">
                                                    Tolerances on dimensions and shape:
                                                </td>
                                                <td style="width: 50%; border-bottom: none;">
                                                    EN 1090-2
                                                </td>
                                            </tr>
                                            <tr>
                                                <td
                                                    style="width: 50%; border-right: 1px solid black; border-bottom: none;">
                                                    Weldability:
                                                </td>
                                                <td style="width: 50%; border-bottom: none;">
                                                    S235JR-J2, S355JR-J2 acc. to EN 10025-2
                                                </td>
                                            </tr>
                                            <tr>
                                                <td
                                                    style="width: 50%; border-right: 1px solid black; border-bottom: none;">
                                                    Fracture toughness/impact resistance and Load
                                                    bearing capacity:
                                                </td>
                                                <td style="width: 50%; border-bottom: none;">
                                                    <span style="display: block;">For JR (27J at
                                                        room temperature) EN 1090-2</span>
                                                    <span style="display: block;">For J0 (27J at
                                                        0°C) EN 1090-2</span>
                                                    <span style="display: block;">For J2 (27J at
                                                        -20°C) EN 1090-2</span>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td
                                                    style="width: 50%; border-right: 1px solid black; border-bottom: none;">
                                                    Fatigue strength:
                                                </td>
                                                <td style="width: 50%; border-bottom: none;">
                                                    EN 1090-2
                                                </td>
                                            </tr>
                                            <tr>
                                                <td
                                                    style="width: 50%; border-right: 1px solid black; border-bottom: none;">
                                                    Resistance to fire:
                                                </td>
                                                <td style="width: 50%; border-bottom: none;">
                                                    EN 1090-2
                                                </td>
                                            </tr>
                                            <tr>
                                                <td
                                                    style="width: 50%; border-right: 1px solid black; border-bottom: none;">
                                                    Reaction to fire:
                                                </td>
                                                <td style="width: 50%; border-bottom: none;">
                                                    EN 1090-2
                                                </td>
                                            </tr>
                                            <tr>
                                                <td
                                                    style="width: 50%; border-right: 1px solid black; border-bottom: none;">
                                                    Release of cadmium and its compounds:
                                                </td>
                                                <td style="width: 50%; border-bottom: none;">
                                                    NPD
                                                </td>
                                            </tr>
                                            <tr>
                                                <td
                                                    style="width: 50%; border-right: 1px solid black; border-bottom: none;">
                                                    Radioactivity:
                                                </td>
                                                <td style="width: 50%; border-bottom: none;">
                                                    NPD
                                                </td>
                                            </tr>
                                            <tr>
                                                <td
                                                    style="width: 50%; border-right: 1px solid black; border-bottom: none;">
                                                    Durability (against corrosion):
                                                </td>
                                                <td style="width: 50%; border-bottom: none;">
                                                    Surface galvanised acc. to EN ISO 1461
                                                </td>
                                            </tr>
                                            <tr>
                                                <td
                                                    style="width: 50%; border-right: 1px solid black; border-bottom: none;">
                                                    Structural Characteristics Design:
                                                </td>
                                                <td style="width: 50%; border-bottom: none;">
                                                    NPD
                                                </td>
                                            </tr>
                                            <tr>
                                                <td
                                                    style="width: 50%; border-right: 1px solid black;">
                                                    Manufacturing:
                                                </td>
                                                <td style="width: 50%;">
                                                    According to EN 1090-2 execution class EXC.2
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </t>
                </t>
            </t>
        </template>

        <!-- Second Template: CE Material Certificate -->
        <template id="report_sale_ce" name="CE Material Certificate">
            <t t-name="reports_print.report_sale_ce">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="web.html_container">
                        <t t-call="reports_print.report_sale_ce_document"
                            t-lang="doc.partner_id.lang" />
                    </t>
                </t>
            </t>
        </template>

    </data>
</odoo>