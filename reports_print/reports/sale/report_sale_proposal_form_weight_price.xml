<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Rapor Şablonu -->
        <template id="report_sale_proposal_form_weight_price_document">
            <t t-call="reports_print.external_layout_yena">
                <style>
                    * {
                    font-family: "DejaVu Sans", Arial, sans-serif !important;
                    }
                </style>
                <t t-foreach="docs" t-as="o">
                    <main style="margin-top: 0; padding-top: 0;">
                        <h1 style="text-align:center;">
                            PROPOSAL FORM </h1>
                        <br />
                        <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)" />
                        <table style="font-size:11pt; width: 100%;">
                            <tbody>
                                <tr>
                                    <!-- Firma Bilgileri ve Logo -->
                                    <td style="width:45%; vertical-align: top;">
                                        <img t-if="o.company_id.logo"
                                            t-att-src="image_data_uri(o.company_id.logo)"
                                            style="max-height: 120px;" alt="Logo" />
                                        <div style="margin-top: 3.8rem;">
                                            <strong>YENA Engineering BV</strong><br /> World Trade
                                            Center Rotterdam<br /> Beursplein 37<br /> Rotterdam
                                            Noord-Brabant Netherlands 34000 <br /> BANK NAME: BUNQ<br />
                                            IBAN: NL26BUNQ2206607298<br /> BANK Swift Code:
                                            BUNQNL2AXXX </div>

                                    </td>
                                    <!-- Müşteri ve Diğer Bilgileri -->
                                    <td style="width:45%; vertical-align: top; padding-left: 10px;">
                                        <div style="line-height: 1.5;">
                                            <strong>
                                                <span t-field="o.partner_id" />
                                            </strong>
                                            <br />
                                            <span t-field="o.partner_id.street" />
                                            <span>, </span>
                                            <span t-field="o.partner_id.zip" />
                                            <span> </span>
                                            <span t-field="o.partner_id.city" />
                                            <br />
                                            <span t-field="o.partner_id.country_id.name" />
                                            <br />
                                            <div t-if="o.partner_id.vat">
                                                <b>VAT:</b>
                                                <span t-field="o.partner_id.vat" />
                                            </div>
                                            <br />
                                            <div style="margin-top: 3rem;"
                                                t-if="o.customer_reference">
                                                <b>Customer Ref. No:</b>
                                                <span t-field="o.customer_reference" />
                                            </div>
                                            <!-- <div t-if="o.partner_id"><b>Customer:</b> <span
                                            t-field="o.partner_id"/></div> -->
                                            <div>
                                                <b>Offer No:</b>
                                                <span t-field="o.project_sales" />
                                            </div>
                                            <div t-if="o.quo_date">
                                                <b>Document Date:</b>
                                                <span t-field="o.quo_date" />
                                            </div>
                                            <div t-if="o.payment_term_id">
                                                <b>Payment Terms:</b>
                                                <span t-field="o.payment_term_id" />
                                            </div>
                                            <div t-if="o.contact_id">
                                                <b>Attention:</b>
                                                <span t-field="o.contact_id" />
                                            </div>
                                            <div t-if="o.partner_shipping_id">
                                                <b>Delivery Address:</b>
                                                <span t-field="o.partner_shipping_id" />
                                            </div>
                                            <div t-if="o.incoterm.code">
                                                <b>Delivery Term:</b>
                                                <span t-field="o.incoterm.code" />
                                            </div>
                                            <div t-if="o.commitment_date">
                                                <b>Delivery Date:</b>
                                                <span t-field="o.commitment_date"
                                                    t-options="{'format': 'dd/MM/yyyy'}" />
                                            </div>
                                            <div t-else="">
                                                <b>Delivery Date:</b>
                                                <span t-esc="o.delivery_date" />
                                            </div>
                                            <div t-if="o.user_id">
                                                <b>Prepared by:</b>
                                                <span t-field="o.user_id" />
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <br />
                        <div>
                            <p>Thanks for your request. Our quotation is respectfully submitted as
                                below.</p>
                            <p>Please send your orders to <a href="mailto:order@yenaengineering.nl"
                                    style="color: blue;">order@yenaengineering.nl</a></p>
                        </div>
                        <table class="table table-sm o_main_table vertical-center"
                            style="font-size:10pt">
                            <thead style="display: table-row-group">
                                <tr>
                                    <th name="th_no" class="text-center"
                                        style="vertical-align: middle;">No</th>
                                    <th name="th_drawingno" class="text-center"
                                        style="vertical-align: middle;">Drawing No</th>

                                    <!--<th
                                    name="th_dimensions" class="text-center" style="vertical-align:
                                    middle;">Dimensions</th>-->
                                    <t t-set="show_name"
                                        t-value="any(line.product_id.customer_description for line in o.order_line)" />
                                    <t t-if="show_name">
                                        <th name="th_name" class="text-center"
                                            style="vertical-align: middle;">Description</th>
                                    </t>

                                    <t t-set="show_coating"
                                        t-value="any(line.coating for line in o.order_line)" />
                                    <t t-if="show_coating">
                                        <th name="th_coating" class="text-center"
                                            style="vertical-align: middle;">Coating</th>
                                    </t>
                                    <th name="th_quantity" class="text-center"
                                        style="vertical-align: middle;">Quantity</th>
                                    <th name="th_priceunit" class="text-center"
                                        style="vertical-align: middle;">Unit Price</th>
                                    <th
                                        style="text-align:center; padding: 8px; border-bottom: 1px solid #000;">Subtotal
                                        Price (Exc. VAT)</th>

                                </tr>
                            </thead>
                            <tbody class="sale_tbody">
                                <t t-set="sira_no" t-value="0" />
                                <t t-set="total_weight" t-value="0" />

                                <t t-set="current_subtotal" t-value="0" />

                                <t t-foreach="o.order_line" t-as="line">

                                    <t t-set="current_subtotal"
                                        t-value="current_subtotal + line.price_subtotal"
                                        groups="account.group_show_line_subtotals_tax_excluded" />
                                    <t t-set="current_subtotal"
                                        t-value="current_subtotal + line.price_total"
                                        groups="account.group_show_line_subtotals_tax_included" />

                                    <tr
                                        t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                        <t t-set="sira_no" t-value="sira_no + 1" />
                                        <t t-set="total_weight"
                                            t-value="line.product_id.weight * line.product_uom_qty" />
                                        <t t-if="not line.display_type">
                                            <td name="td_sira_no" class="text-center"
                                                style="vertical-align: middle;">
                                                <t t-esc="sira_no" />
                                            </td>
                                            <td name="td_name" class="text-center"
                                                style="vertical-align: middle;">
                                                <span t-field="line.product_id" />
                                            </td>
                                            <t t-if="show_name">
                                                <td name="td_name" class="text-center"
                                                    style="vertical-align: middle;">
                                                    <span
                                                        t-field="line.product_id.customer_description" />
                                                </td>
                                            </t>
                                            <t t-if="show_coating">
                                                <td name="td_coating" class="text-center"
                                                    style="vertical-align: middle;">
                                                    <span t-field="line.coating" />
                                                </td>
                                            </t>
                                            <td name="td_quantity" class="text-center"
                                                style="vertical-align: middle;">
                                                <span t-field="line.product_uom_qty" />
                                                <span t-field="line.product_uom" />
                                            </td>
                                            <td name="td_priceunit" class="text-center"
                                                style="vertical-align: middle;">
                                                <span t-field="line.price_unit" />
                                            </td>
                                            <td t-if="display_discount" class="text-center"
                                                groups="product.group_discount_per_so_line"
                                                style="vertical-align: middle;">
                                                <span t-field="line.discount" />
                                            </td>
                                            <td
                                                style="text-align:center; padding: 8px; border: none;">
                                                <span t-field="line.price_subtotal"
                                                    widget="monetary"
                                                    options="{'currency_field': 'company_currency_id'}" />
                                            </td>
                                        </t>

                                        <t t-if="line.display_type == 'line_section'">
                                            <td name="td_section_line" colspan="99">
                                                <span t-field="line.name" />
                                            </td>
                                            <t t-set="current_section" t-value="line" />
                                            <t t-set="current_subtotal" t-value="0" />
                                        </t>
                                        <t t-if="line.display_type == 'line_note'">
                                            <td name="td_note_line" colspan="99">
                                                <span t-field="line.name" />
                                            </td>
                                        </t>
                                    </tr>

                                    <t
                                        t-if="current_section and (line_last or o.order_line[line_index+1].display_type == 'line_section')">
                                        <tr class="is-subtotal text-right">
                                            <td name="td_section_subtotal" colspan="99">
                                                <strong class="mr16">Subtotal</strong>
                                                <span t-esc="current_subtotal"
                                                    t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.pricelist_id.currency_id}" />
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                            </tbody>
                        </table>

                        <!--<div
                        class="clearfix" name="so_total_summary">
                            <div id="total" class="row" name="total">
                                <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">
                                    <table class="table table-sm">
                                        <t t-set="tax_totals" t-value="json.loads(o.tax_totals_json)"/>
                                        <t t-call="account.new.document_tax_totals"/>
                                    </table>
                                </div>
                            </div>
                        </div>-->
                        <div t-if="o.signature" class="mt32 ml64 mr4" name="signature">
                            <div class="offset-8">
                                <strong>Signature</strong>
                            </div>
                            <div class="offset-8">
                                <img t-att-src="image_data_uri(o.signature)"
                                    style="max-height: 4cm; max-width: 8cm;" />
                            </div>
                            <div class="offset-8 text-center">
                                <p t-field="o.signed_by" />
                            </div>
                        </div>
                        <span style="font-size:10pt">
                            <b>
                                <u>Notes:</u>
                            </b>
                        </span>
                        <span style="font-size:8pt" t-field="o.note" />
                        <div class="oe_structure" />
                    </main>
                </t>
            </t>
        </template>

        <template id="report_sale_proposal_form_weight_price">
            <t t-name="reports_print.report_sale_proposal_form_weight_price">
                <t t-call="web.html_container">
                    <t t-foreach="docs" t-as="o">
                        <t t-call="reports_print.report_sale_proposal_form_weight_price_document"
                            t-lang="o.partner_id.lang" />
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>