<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Document Template -->
        <template id="report_sale_proposal_form_document">
            <t t-call="reports_print.external_layout_yena2">
                <style>
                    * {
                    font-family: "DejaVu Sans", Arial, sans-serif !important;
                    }
                </style>
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <h1 style="text-align:center;">PROPOSAL FORM</h1>
                        <br />
                        <div class="oe_structure" />

                        <!-- Header Table with Company and Customer Information -->
                        <table style="font-size:11pt; width: 100%;">
                            <tr>
                                <!-- Company Information and Logo -->
                                <td style="width:45%; padding-left: 10px; vertical-align: top;">
                                    <img t-if="o.company_id.logo"
                                        t-att-src="image_data_uri(o.company_id.logo)"
                                        style="max-height: 120px;" alt="Logo" />
                                    <div style="margin-top: 20px;">
                                        <strong>
                                            <span t-field="o.company_id.name" />
                                        </strong>
                                        <br />
                                        <span t-field="o.company_id.street" />
                                        <br />
                                        <t t-if="o.company_id.street2">
                                            <span t-field="o.company_id.street2" />
                                            <br />
                                        </t>
                                        <span t-field="o.company_id.city" />
                                        <span t-field="o.company_id.state_id" />
                                        <span t-field="o.company_id.zip" />
                                        <br />
                                        <t t-if="o.company_id.vat"> Vergi No: <span
                                                t-field="o.company_id.vat" /><br />
                                        </t>
                                    </div>
                                </td>

                                <!-- Customer Information -->
                                <td style="width:45%; padding-right: 10px; vertical-align: top;">
                                    <span t-field="o.partner_id" />
                                    <br />
                                    <span t-field="o.partner_id.street" />
                                    <t t-if="o.partner_id.zip or o.partner_id.city">
                                        <span>, </span>
                                        <span t-field="o.partner_id.zip" />
                                        <span t-field="o.partner_id.city" />
                                    </t>
                                    <t t-if="o.partner_id.vat"> VAT: <span
                                            t-field="o.partner_id.vat"
                                            style="vertical-align: baseline;" /><br />


                                    </t>
                                    <br />
                                    <span t-field="o.partner_id.country_id.name" />
                                    <br />

                                    <div style="margin-top: 20px;">
                                        <t t-if="o.customer_reference">
                                            <b>Customer Ref No:</b>
                                            <span t-field="o.customer_reference" />
                                            <br />
                                        </t>
                                        <t t-if="o.name">
                                            <b>Offer No:</b>
                                            <span t-field="o.name" />
                                            <br />
                                        </t>
                                        <b>Document Date:</b>
                                        <span
                                            t-esc="context_timestamp(datetime.datetime.now()).strftime('%d/%m/%Y')" />
                                        <br />
                                        <t t-if="o.payment_term_id">
                                            <b>Payment Terms:</b>
                                            <span t-field="o.payment_term_id" />
                                            <br />
                                        </t>
                                        <t t-if="o.partner_shipping_id">
                                            <b>Delivery Address:</b>
                                            <span t-field="o.partner_shipping_id" />
                                            <br />
                                        </t>
                                        <t t-if="o.incoterm.code">
                                            <b>Delivery Term:</b>
                                            <span t-field="o.incoterm.code" />
                                            <br />
                                        </t>
                                        <t t-if="o.commitment_date">
                                            <b>Delivery Date:</b>
                                            <span t-field="o.commitment_date" />
                                            <br />
                                        </t>
                                        <t t-if="o.user_id">
                                            <b>Prepared by:</b>
                                            <span t-field="o.user_id" />
                                            <br />
                                        </t>
                                    </div>
                                </td>
                            </tr>
                        </table>

                        <br />
                        <div>
                            <p>Thanks for your request. Our quotation is respectfully submitted as
                                below.</p>
                            <p>Please send your orders to <a href="mailto:order@yenaengineering.nl"
                                    style="color: blue;">order@yenaengineering.nl</a></p>
                        </div>

                        <!-- Order Lines Table -->
                        <table class="table table-sm o_main_table"
                            style="font-size:10pt; width: 100%; margin-top: 40px; border-collapse: collapse;">
                            <thead>
                                <tr style="text-align:center">
                                    <th class="text-center"
                                        style="padding: 8px; border-bottom: 1px solid #000;">No</th>
                                    <th class="text-center"
                                        style="padding: 8px; border-bottom: 1px solid #000;">Drawing
                                        No</th>
                                    <t
                                        t-if="any(line.product_id.customer_description for line in o.order_line)">
                                        <th class="text-center"
                                            style="padding: 8px; border-bottom: 1px solid #000;">
                                            Description</th>
                                    </t>
                                    <t t-if="any(line.coating for line in o.order_line)">
                                        <th class="text-center"
                                            style="padding: 8px; border-bottom: 1px solid #000;">
                                            Coating</th>
                                    </t>
                                    <th class="text-center"
                                        style="padding: 8px; border-bottom: 1px solid #000;">
                                        Quantity</th>
                                    <th class="text-center"
                                        style="padding: 8px; border-bottom: 1px solid #000;">Unit
                                        Price</th>
                                    <th class="text-center"
                                        style="padding: 8px; border-bottom: 1px solid #000;">Subtotal
                                        Price (Exc. VAT)</th>
                                </tr>
                            </thead>
                            <tbody class="sale_tbody">
                                <t t-set="current_subtotal" t-value="0" />
                                <t t-set="sira_no" t-value="0" />

                                <t t-foreach="o.order_line" t-as="line">
                                    <t t-set="current_subtotal"
                                        t-value="current_subtotal + line.price_subtotal" />

                                    <tr
                                        t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                        <t t-if="not line.display_type">
                                            <t t-set="sira_no" t-value="sira_no + 1" />
                                            <td class="text-center" style="vertical-align: middle;">
                                                <span t-esc="sira_no" />
                                            </td>
                                            <td class="text-center" style="vertical-align: middle;">
                                                <span t-field="line.product_id.name" />
                                            </td>
                                            <t
                                                t-if="any(l.product_id.customer_description for l in o.order_line)">
                                                <td class="text-center"
                                                    style="vertical-align: middle;">
                                                    <span
                                                        t-field="line.product_id.customer_description" />
                                                </td>
                                            </t>
                                            <t t-if="any(l.coating for l in o.order_line)">
                                                <td class="text-center"
                                                    style="vertical-align: middle;">
                                                    <span t-field="line.coating" />
                                                </td>
                                            </t>
                                            <td class="text-center" style="vertical-align: middle;">
                                                <span t-field="line.product_uom_qty" />
                                                <span t-field="line.product_uom.name" />
                                            </td>
                                            <td class="text-center" style="vertical-align: middle;">
                                                <span t-field="line.price_unit"
                                                    t-options="{'widget': 'monetary', 'display_currency': o.currency_id}" />
                                            </td>
                                            <td class="text-center" style="vertical-align: middle;">
                                                <span t-field="line.price_subtotal"
                                                    t-options="{'widget': 'monetary', 'display_currency': o.currency_id}" />
                                            </td>
                                        </t>

                                        <t t-if="line.display_type == 'line_section'">
                                            <td colspan="99" class="text-center">
                                                <span t-field="line.name" />
                                            </td>
                                        </t>
                                        <t t-if="line.display_type == 'line_note'">
                                            <td colspan="99" class="text-center">
                                                <span t-field="line.name" />
                                            </td>
                                        </t>
                                    </tr>
                                </t>
                                <tr>
                                    <td colspan="5"
                                        style="text-align:right; font-weight:bold; padding: 8px; border-top: 1px solid #000;">
                                        Total (Exc. VAT):
                                    </td>
                                    <td class="text-center"
                                        style="font-weight:bold; padding: 8px; border-top: 1px solid #000;">
                                        <span t-esc="o.amount_untaxed"
                                            t-options="{'widget': 'monetary', 'display_currency': o.currency_id}" />
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                        <!-- Notes Section -->
                        <span style="font-size:10pt">
                            <b>
                                <u>Notes:</u>
                            </b>
                        </span>
                        <span style="font-size:8pt" t-field="o.note" />

                        <!-- Footer -->
                        <div class="footer"
                            style="text-align:center; font-size:11px; position: fixed; bottom: 0; width: 100%;">
                            <t t-if="o.company_id.id == 2">
                                <div>
                                    YENA ENGINEERING BV World Trade Center, Beursplein 37, 3011 AA
                                    Rotterdam, The Netherlands
                                </div>
                                <div>
                                    P:+31 (0) 10 84 54 617 * yena@yenaengineering.nl *
                                    www.yenaengineering.nl
                                </div>
                                <div>
                                    BANK NAME: BUNQ * IBAN: NL26BUNQ2206607298 * BANK Swift Code:
                                    BUNQNL2AXXX
                                </div>
                            </t>
                            <t t-else="">
                                <div>Genel Şirket Adresi, Şehir, Ülke</div>
                                <div>Telefon ve E-posta Bilgileri</div>
                            </t>
                            <div class="text-muted"> Page: <span class="page" /> / <span
                                    class="topage" />
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </template>

        <!-- Main Report Template -->
        <template id="report_sale_proposal_form">
            <t t-name="reports_print.report_sale_proposal_form">
                <t t-call="web.html_container">
                    <t t-foreach="docs" t-as="o">
                        <t t-call="reports_print.report_sale_proposal_form_document"
                            t-lang="o.partner_id.lang" />
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>