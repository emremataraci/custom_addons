<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Document Template -->
        <template id="report_purchase_rfq_document">
            <t t-call="reports_print.external_layout_yena">
                <style>
                    * {
                    font-family: "DejaVu Sans", Arial, sans-serif !important;
                    }
                </style>
                <t t-foreach="docs" t-as="o">
                    <main>
                        <h1 style="text-align:center;">TEKLİF TALEBİ</h1>
                        <br />
                        <div class="page">
                            <div class="oe_structure" />
                            <table style="font-size:11pt; width: 100%;">
                                <tbody>
                                    <tr>
                                        <!-- Firma Bilgileri ve Logo -->
                                        <td
                                            style="width:45%; padding-left: 10px; vertical-align: top;">
                                            <img t-if="o.company_id.logo"
                                                t-att-src="image_data_uri(o.company_id.logo)"
                                                style="max-height: 120px;" alt="Logo" />
                                            <div style="margin-top: 20px;">
                                                <strong>
                                                    <span t-field="o.company_id.name" />
                                                </strong>
                                                <br />
                                                <span
                                                    t-field="o.company_id.street" /><br />
                                                <span
                                                    t-field="o.company_id.street2" /><br />
                                                <span
                                                    t-field="o.company_id.city" />
                                                <span
                                                    t-field="o.company_id.state_id" />
                                                <span
                                                    t-field="o.company_id.zip" />
                                                <br /> Vergi No: <span
                                                    t-field="o.company_id.vat" />
                                                <br />
                                            </div>
                                        </td>

                                        <!-- Müşteri Bilgileri ve Diğer Bilgiler -->
                                        <td
                                            style="width:45%; padding-right: 10px; vertical-align: top;">
                                            <span t-field="o.partner_id" />
                                            <br />
                                            <span
                                                t-field="o.partner_id.street" />
                                            <span>, </span>
                                            <span
                                                t-field="o.partner_id.zip" />
                                            <span> </span>
                                            <span
                                                t-field="o.partner_id.city" />
                                            <br />
                                            <span
                                                t-field="o.partner_id.country_id.name" />
                                            <br />
                                            Vergi No: <span t-field="o.partner_id.vat" />
                                            <br />
                                            <div
                                                style="margin-top: 20px;">
                                                <br />
                                                <br />
                                                <div t-if="o.date_order">
                                                    <b>Son Teklif Tarihi:</b>
                                                    <span t-esc="o.date_order.strftime('%d/%m/%Y')" />
                                                </div>
                                                <div t-if="o.name">
                                                    <b>YENA Talep No:</b>
                                                    <span t-field="o.name" />
                                                </div>
                                                <t t-set="today" t-value="datetime.datetime.now()" />
                                                <div>
                                                    <b>Döküman Tarihi:</b>
                                                    <span t-esc="today.strftime('%d/%m/%Y')" />
                                                </div>
                                                <div t-if="o.partner_id">
                                                    <b>Yetkili:</b>
                                                    <span t-field="o.partner_id" />
                                                </div>
                                                <div t-if="o.incoterm_id">
                                                    <b>Teslim Şekli:</b>
                                                    <span t-field="o.incoterm_id" />
                                                </div>
                                                <div t-if="o.delivery_date">
                                                    <b>Teslim Tarihi:</b>
                                                    <span t-field="o.delivery_date"
                                                        t-options="{'format': 'dd/MM/yyyy'}" />
                                                </div>
                                                <div t-if="o.user_id">
                                                    <b>Hazırlayan:</b>
                                                    <span t-field="o.user_id" />
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <br />
                            <!-- Satırların Eklenmesi -->
                            <table class="table table-sm o_main_table vertical-center"
                                style="font-size:10pt; width: 100%; margin-top: 40px; border-collapse: collapse;">
                                <thead>
                                    <tr style="text-align:center">
                                        <!-- Kaldırılan sütunlar: No, Description, Subtotal Price -->
                                        <th class="text-center"
                                            style="padding: 8px; border-bottom: 1px solid #000;">Product
                                            No</th>
                                        <th class="text-center"
                                            style="padding: 8px; border-bottom: 1px solid #000;">
                                            Coating</th>
                                        <th class="text-center"
                                            style="padding: 8px; border-bottom: 1px solid #000;">
                                            Quantity</th>
                                        <th class="text-center"
                                            style="padding: 8px; border-bottom: 1px solid #000;">Total
                                            Weight</th>
                                    </tr>
                                </thead>
                                <tbody class="sale_tbody">
                                    <!-- Kaldırılan sira_no ve current_subtotal değişkenleri -->
                                    <t t-foreach="o.order_line" t-as="line">
                                        <tr
                                            t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                            <t t-if="not line.display_type">
                                                <!-- Kaldırılan No sütunu -->
                                                <td class="text-center"
                                                    style="vertical-align: middle;">
                                                    <span t-field="line.product_id.name" />
                                                </td>
                                                <td class="text-center"
                                                    style="vertical-align: middle;">
                                                    <span t-field="line.coating" />
                                                </td>
                                                <td class="text-center"
                                                    style="vertical-align: middle;">
                                                    <span t-field="line.product_uom_qty" />
                                                    <span t-field="line.product_uom.name" />
                                                </td>
                                                <td class="text-center"
                                                    style="vertical-align: middle;">
                                                    <span t-field="line.totalweight" />
                                                </td>
                                            </t>

                                            <t t-if="line.display_type == 'line_section'">
                                                <td colspan="3" class="text-center">
                                                    <span t-field="line.name" />
                                                </td>
                                            </t>
                                            <t t-if="line.display_type == 'line_note'">
                                                <td colspan="3" class="text-center">
                                                    <span t-field="line.name" />
                                                </td>
                                            </t>
                                        </tr>
                                        <!-- Kaldırılan Subtotal satırı -->
                                    </t>
                                </tbody>
                            </table>

                            <div class="footer o_standard_footer"
                                style="text-align:center;font-size:11px; border-top: 1px solid black; padding-top: 10px;">
                                <ul class="list-inline mb4"></ul>
                                <br />
                                <br />
                                <t t-if="o.company_id.id == 2">
                                    <div>
                                        YENA ENGINEERING BV World Trade Center, Beursplein 37, 3011
                                        AA Rotterdam, The Netherlands
                                    </div>
                                    <div>
                                        P:+31 (0) 10 84 54 617 * yena@yenaengineering.nl *
                                        www.yenaengineering.nl
                                    </div>
                                    <div>
                                        BANK NAME: BUNQ * IBAN: NL26BUNQ2206607298 * BANK Swift
                                        Code: BUNQNL2AXXX
                                    </div>
                                    <div class="text-muted"> Page: <span class="page" /> / <span
                                            class="topage" />
                                    </div>
                                </t>
                                <t t-else="">
                                    <div>Genel Şirket Adresi, Şehir, Ülke</div>
                                    <div>Telefon ve E-posta Bilgileri</div>
                                    <div class="text-muted"> Page: <span class="page" /> / <span
                                            class="topage" />
                                    </div>
                                </t>
                            </div>
                            <span style="font-size:10pt">
                                <b>
                                    <u>Notlar:</u>
                                </b>
                            </span>
                            <span style="font-size:8pt" t-field="o.notes" />
                            <div class="oe_structure" />
                        </div>
                    </main>
                </t>
            </t>
        </template>

        <!-- Main Report Template -->
        <template id="report_purchase_rfq">
            <t t-name="reports_print.report_purchase_rfq">
                <t t-call="web.html_container">
                    <t t-foreach="docs" t-as="o">
                        <t t-call="reports_print.report_purchase_rfq_document"
                            t-lang="o.partner_id.lang" />
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>