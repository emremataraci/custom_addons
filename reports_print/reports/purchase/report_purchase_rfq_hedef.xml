<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Document Template -->
        <template id="report_purchase_rfq_hedef_document">
            <t t-call="reports_print.external_layout_yena">
                <style>
                    * {
                    font-family: "DejaVu Sans", Arial, sans-serif !important;
                    }
                </style>
                <t t-foreach="docs" t-as="o">
                    <main>
                        <h1 style="text-align:center;">HEDEF FİYATLI TEKLİF TALEBİ</h1>
                        <br />
                        <div class="page">
                            <div class="oe_structure" />
                            <table style="font-size:11pt; width: 100%;">
                                <tbody>
                                    <tr>
                                        <!-- Firma Bilgileri -->
                                        <td
                                            style="width:45%; padding-left: 10px; vertical-align: top;">
                                            <img t-if="o.company_id.logo"
                                                t-att-src="image_data_uri(o.company_id.logo)"
                                                style="max-height: 120px;" alt="Logo" />
                                            <div style="margin-top: 20px;">

                                                <strong>
                                                    <span t-field="o.company_id.name" />
                                                </strong>
                                                    <br />
                
                                                    <span
                                                    t-field="o.company_id.street" /><br />
                                                    <span
                                                    t-field="o.company_id.street2" /><br />
                                                    <span
                                                    t-field="o.company_id.city" />
                                                    <span> </span>
                                                    <span
                                                    t-field="o.company_id.state_id" /> 
                                                    <span> </span>
                                                    <span
                                                    t-field="o.company_id.zip" /> 
                                                    <span> </span>
                                                    <br />
                                                Vergi No: <span t-field="o.company_id.vat" />
                                                    <br />
                                            </div>
                                        </td>


                                        <!-- Müşteri Bilgileri -->
                                        <td
                                            style="width:45%; padding-right: 10px; vertical-align: top;">
                                            <span t-field="o.partner_id" />
                                                <br />
                                                <span
                                                t-field="o.partner_id.street" />
                                                <span>, </span>
                                                <span
                                                t-field="o.partner_id.zip" />
                                                <span> </span>
                                                <span
                                                t-field="o.partner_id.city" />
                                                <br />
                                                <span
                                                t-field="o.partner_id.country_id.name" />
                                                <br />
                                            Vergi No: <span t-field="o.partner_id.vat" />
                                                <br />

                                            <!-- Diğer Bilgiler -->
                                            <div
                                                style="margin-top: 20px;">
                                                <!--<div
                                                t-if="o.vendor_ref"><b>Tedarikçi Referans No:</b>
                                                <span t-field="o.vendor_ref"/></div>-->
                                                <br />
                                                <br />
                                                <div t-if="o.name">
                                                    <b>YENA Talep No:</b>
                                                    <span t-field="o.name" />
                                                </div>
                                                <!--<div
                                                t-if="o.project_purchase"><b>Proje No:</b> <span
                                                t-field="o.project_purchase.name"/></div>-->
                                                <t t-set="today" t-value="datetime.datetime.now()" />
                                                <div>
                                                    <b>Döküman Tarihi:</b>
                                                    <span t-esc="today.strftime('%d/%m/%Y')" />
                                                </div>
                                                <div t-if="o.contact_id.name">
                                                    <b>Yetkili:</b>
                                                    <span t-field="o.contact_id.name" />
                                                </div>
                                                <div t-if="o.incoterm_id">
                                                    <b>Teslim Şekli:</b>
                                                    <span t-field="o.incoterm_id" />
                                                </div>
                                                <div t-if="o.delivery_date">
                                                    <b>Teslim Tarihi:</b>
                                                    <span t-field="o.delivery_date"
                                                        t-options="{'format': 'dd/MM/yyyy'}" />
                                                </div>
                                                <div t-if="o.user_id">
                                                    <b>Hazırlayan:</b>
                                                    <span t-field="o.user_id" />
                                                </div>
                                            </div>

                                        </td>

                                    </tr>
                                </tbody>
                            </table>
                            <br />

                            <table class="table table-sm o_main_table vertical-center"
                                style="font-size:10pt; width: 100%; margin-top: 40px; border-collapse: collapse;">
                                <thead>
                                    <tr style="text-align:center">
                                        <th class="text-center"
                                            style="padding: 8px; border-bottom: 1px solid #000;">Product
                                            No</th>
                                        <th class="text-center"
                                            style="padding: 8px; border-bottom: 1px solid #000;">
                                            Coating</th>
                                        <th class="text-center"
                                            style="padding: 8px; border-bottom: 1px solid #000;">
                                            Quantity</th>
                                        <th class="text-center"
                                            style="padding: 8px; border-bottom: 1px solid #000;">Target
                                            Unit Price</th>
                                        <th class="text-center"
                                            style="padding: 8px; border-bottom: 1px solid #000;">
                                            Target Subtotal Price (Exc. VAT)</th>
                                    </tr>
                                </thead>
                                <tbody class="sale_tbody">
                                    <t t-set="total_weight" t-value="0" />
                                    <t t-set="current_subtotal" t-value="0" />

                                    <t t-foreach="o.order_line" t-as="line">
                                        <t t-set="current_subtotal"
                                            t-value="current_subtotal + line.price_subtotal" />
                                        <t t-set="current_subtotal"
                                            t-value="current_subtotal + line.price_total" />

                                        <tr
                                            t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                            <t t-set="total_weight"
                                                t-value="line.product_id.weight * line.product_uom_qty" />
                                            <t t-if="not line.display_type">
                                                <td class="text-center"
                                                    style="vertical-align: middle;">
                                                    <span t-field="line.product_id.name" />
                                                </td>
                                                <td class="text-center"
                                                    style="vertical-align: middle;">
                                                    <span t-field="line.coating" />
                                                </td>
                                                <td class="text-center"
                                                    style="vertical-align: middle;">
                                                    <span t-field="line.product_uom_qty" />
                                                    <span t-field="line.product_uom.name" />
                                                </td>
                                                <td class="text-center"
                                                    style="vertical-align: middle;">
                                                    <span t-field="line.price_unit"
                                                        widget="monetary"
                                                        options="{'currency_field': 'o.company_currency_id'}" />
                                                </td>
                                                <td class="text-center"
                                                    style="vertical-align: middle;">
                                                    <span t-field="line.price_subtotal" />
                                                </td>
                                            </t>

                                            <t t-if="line.display_type == 'line_section'">
                                                <td colspan="99" class="text-center">
                                                    <span t-field="line.name" />
                                                </td>
                                                <t t-set="current_section" t-value="line" />
                                                <t t-set="current_subtotal" t-value="0" />
                                            </t>
                                            <t t-if="line.display_type == 'line_note'">
                                                <td colspan="99" class="text-center">
                                                    <span t-field="line.name" />
                                                </td>
                                            </t>
                                        </tr>

                                        <t
                                            t-if="current_section and (line_last or o.order_line[line_index + 1].display_type == 'line_section')">
                                            <tr class="is-subtotal text-right">
                                                <td colspan="99">
                                                    <strong>Subtotal</strong>
                                                    <span t-esc="current_subtotal"
                                                        t-options="{'widget': 'monetary', 'display_currency': o.pricelist_id.currency_id}" />
                                                </td>
                                            </tr>
                                        </t>
                                    </t>
                                </tbody>
                            </table>
                            <div class="footer o_standard_footer"
                                style="text-align:center;font-size:11px">
                                <ul class="list-inline mb4">
                                </ul>
                                <br />
                                <br />
                                <br />
                                <br />

                                <t t-if="o.company_id.id == 2">
                                    <div>
                                        YENA ENGINEERING BV World Trade Center, Beursplein 37, 3011
                                        AA Rotterdam, The Netherlands
                                    </div>
                                    <div>
                                        P:+31 (0) 10 84 54 617 * yena@yenaengineering.nl *
                                        www.yenaengineering.nl
                                    </div>
                                    <div>
                                        BANK NAME: BUNQ * IBAN: NL26BUNQ2206607298 * BANK Swift
                                        Code: BUNQNL2AXXX
                                    </div>
                                    <div class="text-muted"> Page: <span class="page" /> / <span
                                            class="topage" />
                                    </div>
                                </t>

                                <t t-else="">
                                    <div>
                                        <!--Genel
                                        Şirket Adresi, Şehir, Ülke
                                </div>
                                <div>
                                    Telefon ve E-posta Bilgileri-->
                                    </div>
                                    <div class="text-muted"> Page: <span class="page" /> / <span
                                            class="topage" />
                                    </div>
                                </t>
                            </div>
                            <span style="font-size:10pt">
                                <b>
                                    <u>Notlar:</u>
                                </b>
                            </span>
                            <span style="font-size:8pt" t-field="o.notes" />
                            <div class="oe_structure" />
                        </div>
                    </main>
                </t>
            </t>
        </template>

        <template id="report_purchase_rfq_hedef">
            <t t-name="reports_print.report_purchase_rfq_hedef">
                <t t-call="web.html_container">
                    <t t-foreach="docs" t-as="o">
                        <t t-call="reports_print.report_purchase_rfq_hedef_document"
                            t-lang="o.partner_id.lang" />
                    </t>
                </t>
            </t>
        </template>

    </data>
</odoo>