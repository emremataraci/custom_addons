<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- DOP Malzeme Sertifikası Belgesi Şablonu (Satın Alma) -->
        <template id="report_purchase_dop_document"
            name="Purchase DOP Material Certificate Document">
            <t t-name="reports_print.report_purchase_dop_document">
                <!-- 'web.html_container' ile tüm raporu sarmalıyoruz -->
                <t t-call="web.html_container">
                    <t t-call="reports_print.external_layout_yena">
                        <style>
                            * {
                            font-family: "DejaVu Sans", Arial, sans-serif !important;
                            }
                        </style>
                        <!-- Tüm satın alma siparişlerinin satırlarını bir arada işliyoruz -->
                        <t t-foreach="docs" t-as="doc">
                            <t t-foreach="doc.order_line" t-as="line">
                                <div class="page"
                                    style="background-color: transparent; page-break-after: always;">
                                    <table
                                        style="width: 100%; border-collapse: collapse; background-color: transparent;">
                                        <tr>
                                            <td style="text-align: center; border: 1px solid black;">
                                                PERFORMANS BEYANI<br /> DECLARATION OF PERFORMANCE<br />
                                                Yapı Malzemeleri Yönetmeliği 305/2011/AB<br /> Regulation
                                                305/2011/EU<br /> Client Reference No : <t
                                                    t-esc="doc.customer_reference" /> (YENA - <t
                                                    t-esc="doc.project_purchase.name" />)<br /> Product : <t
                                                    t-esc="line.product_id.name" />
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="border: 1px solid black;">
                                                <table style="width: 100%; border-collapse: collapse;">
                                                    <!-- Ürünle ilgili diğer bilgiler buraya gelir -->
                                                    <!-- Orijinal kodunuzdaki tablo içeriği -->
                                                </table>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </t>
                        </t>
                        <!-- 'Beyan Edilen Performanslar' sayfasını en sona ekliyoruz -->
                        <div class="page" style="page-break-before: always;">
                            <!-- "Beyan Edilen Performanslar" içeriği buraya gelir -->
                            <!-- Orijinal kodunuzdaki tablo ve metinler -->
                            <table
                                style="width: 100%; text-align: center; border: 1px solid black; border-collapse: collapse;">
                                <thead>
                                    <tr>
                                        <th colspan="3" style="border: 1px solid black; padding: 10px;">
                                            Beyan Edilen Performanslar<br />
                                            <em>Declared Performances</em>
                                        </th>
                                    </tr>
                                    <tr>
                                        <th style="border: 1px solid black; padding: 10px;">
                                            Temel karakteristikler / Essential characteristics
                                        </th>
                                        <th style="border: 1px solid black; padding: 10px;">
                                            Performans / Performance
                                        </th>
                                        <th style="border: 1px solid black; padding: 10px;">
                                            Harmonize teknik standart / Harmonised technical specification
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- Tablo içeriği buraya gelir -->
                                    <!-- Orijinal kodunuzdaki tablo satırları -->
                                </tbody>
                            </table>
                            <!-- Diğer metinler ve imza bölümü -->
                            <p style="text-align: left; margin-top: 10%;">
                                <strong>Uygun Teknik Belgeler ve/veya Özel Teknik Belgeler</strong> :
                                Uygulanamaz<br />
                                <strong>Appropriate Technical Documentation and / or
                                Special Technical Documents</strong> : Not applicable </p>
    
                            <p style="text-align: justify; margin-top: 2%; margin-bottom: 2%;"> Yukarıda
                                tanımlanan ürünün performansı, belirtilen performans gruplarına uygundur. Bu
                                performans beyanı, 305/2011 sayılı Tüzüğe (AB) göre yukarıda belirtilen
                                üreticinin sorumluluğundadır.<br /> The performance of the product described
                                above is suitable for the specified performance groups. This declaration of
                                performance is the responsibility of the aforementioned manufacturer
                                according to Regulation (EU) 305/2011. </p>
    
                            <p style="text-align: left; margin-top: 2%;">
                                <strong>Üretici adına</strong>
                            </p>
    
                            <p style="text-align: left; margin-top: 2%;"> 31.01.2020<br />
                                <strong>EBRU
                                ÇELİKTEN</strong><br /> Kalite Müdürü </p>
                        </div>
                    </t>
                </t>
            </t>
        </template>

            <!-- DOP Malzeme Sertifikası Şablonu (Satın Alma) -->
            <template id="report_purchase_dop" name="Purchase DOP Material Certificate">
                <t t-name="reports_print.report_purchase_dop">
                    <!-- Ana rapor şablonu sadece 'report_purchase_dop_document'i çağırır -->
                    <t t-call="reports_print.report_purchase_dop_document" />
                </t>
            </template>

        </data>
</odoo>
