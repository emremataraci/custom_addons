<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="external_layout_yena2">
    <t t-name="reports_print.external_layout_yena2">
      <t t-if="not o" t-set="o" t-value="doc" />

      <t t-if="not company">
        <!-- Multicompany -->
        <t t-if="company_id">
          <t t-set="company" t-value="company_id" />
        </t>
        <t t-elif="o and 'company_id' in o and o.company_id.sudo()">
          <t t-set="company" t-value="o.company_id.sudo()" />
        </t>
        <t t-else="else">
          <t t-set="company" t-value="res_company" />
        </t>
      </t>
      <t t-call="reports_print.external_layout_alperen_standard">
        <t t-out="0" />
      </t>
    </t>
  </template>
  <template id="external_layout_alperen_standard">
    <t t-name="reports_print.external_layout_standard_alperen">
      <div
        t-attf-class="article o_report_layout_standard o_company_#{company.id}_layout {{ 'o_layout_background' if company.layout_background in ['Geometric', 'Custom'] else '' }}"
        t-att-data-oe-model="o and o._name"
        t-att-data-oe-id="o and o.id"
        t-att-data-oe-lang="o and o.env.context.get('lang')">
        <div class="pt-1">
          <!-- Bu div, adresin header tarafından kesilmemesini sağlar. -->
          <!--<t
        t-call="web.address_layout"/>-->
        </div>
        <t t-out="0" />
      </div>

      <div class="footer o_standard_footer o_company_#{company.id}_layout"
        style="text-align:center;font-size:11px">
        <ul class="list-inline mb4">
          <!-- Liste öğeleri eklenebilir -->
        </ul>
        <div class="footer-content">
          <t t-if="report_type == 'pdf'">
            <div>
              YENA DEMİR ÇELİK SANAYİ VE TİCARET LTD ŞTİ. Osmanağa Mah. Rıhtım Cad. No:8 Kat:4
              Daire:5 Kadıköy / İstanbul
            </div>
            <div>
              T:0 216 999 76 64 * yena@yenaengineering.nl * www.yenaengineering.nl
            </div>
            <div class="text-muted"> Page: <span class="page" /> / <span class="topage" />
            </div>
          </t>
        </div>
      </div>
    </t>
  </template>
</odoo>